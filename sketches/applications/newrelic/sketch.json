{
    "manifest":
    {
        "main.cf": { "description": "main file" },
        "test.pl": {test:true},
        "README.md": { "documentation": true },

        "params/demo.json": { "description": "Install New Relic: common parameters" },
    },

    "metadata":
    {
        "name": "Applications::NewRelic",
        "description": "Sketch for installing, configuring, and starting New Relic monitoring plugins (only server monitoring supported at the moment).",
        "version": 1.00,
        "license": "MIT",
        "tags": [ "cfdc", "newrelic", "enterprise_compatible" ],
        "authors": [ "Ted Zlatanov <tzz@lifelogs.com>" ],
        "depends": { "CFEngine::dclib": {},
                     "cfengine": { "version": "3.5.0" }, "os": [ { "debian" : "Debian", "ubuntu" : "Ubuntu", "redhat" : "Red Hat", "centos" : "CentOS" } ] }
    },

	"api" : {
		"server" : [
            { name : "runenv", type : "environment" },
			{ name : "metadata", type : "metadata" },
			{ name : "license_key", type : "string", description: "New Relic license key", default : "not valid" },
			{ name : "ensure", type : "boolean", default : true, description: "Ensure server monitoring service is running.  Set to false to stop service" },
			{ name : "install", type : "boolean", default : true, description: "Install packages.  Set to false to remove them" },
            { type: "return", name: "installed", },
            { type: "return", name: "configured", },
            { type: "return", name: "running", },
		],
	},
    "namespace": "cfdc_newrelic",
    "interface": [ "main.cf" ]
}
